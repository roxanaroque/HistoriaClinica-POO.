@startuml

class Patient {
    - id: String
    - name: String
    - birthDate: Date
    - gender: char
    - weight: double
    - height: double
    - address: String
    - images: List<Image>
    - diseases: List<Disease>
    
    + addImage(img: Image): void
    + addDisease(disease: Disease): void
    + getDetails(): String
}

class Image {
    - fileName: String
    - date: Date
    - type: String
    - comments: String

    + getDetails(): String
}

class Disease {
    - name: String
    - date: Date
    - treatment: String

    + getHistory(): String
}

Patient "1" --> "*" Image : has
Patient "1" --> "*" Disease : has

@enduml

